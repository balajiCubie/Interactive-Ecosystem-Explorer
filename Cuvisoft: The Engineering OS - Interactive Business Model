    // --- INITIALIZATION & RENDERING ---

    function initFlywheel() {
        const flywheel = document.getElementById('flywheel');
        const infoPanel = document.getElementById('flywheel-info');
        const components = appData.coreComponents;
        const angleStep = 360 / components.length;

        components.forEach((comp, index) => {
            const angle = angleStep * index;
            const segment = document.createElement('div');
            segment.className = 'flywheel-segment absolute w-1/3 h-1/3 rounded-full flex items-center justify-center text-center cursor-pointer shadow-md p-2';
            segment.style.transform = `rotate(${angle}deg) translate(${flywheel.offsetWidth / 2.5}px) rotate(-${angle}deg)`;
            segment.style.backgroundColor = ['#82aedc', '#6da2d9', '#4c89c8'][index];
            
            segment.innerHTML = `<span class="font-semibold text-xs text-white">${comp.icon} ${comp.name}</span>`;
            
            segment.addEventListener('mouseenter', () => {
                infoPanel.innerHTML = `<strong class="text-[#3F88C5]">${comp.name}:</strong> ${comp.description}`;
            });
            
            flywheel.appendChild(segment);
        });
    }

    function initValueMechanisms() {
        const grid = document.getElementById('value-mechanisms-grid');
        appData.valueMechanisms.forEach(mech => {
            const card = document.createElement('div');
            card.className = 'glass-card rounded-xl p-6 cursor-pointer transform hover:-translate-y-2 transition-transform duration-300';
            card.innerHTML = `
                <div class="flex items-center text-2xl font-bold mb-4">
                    <span class="mr-4 text-4xl">${mech.icon}</span>
                    <h3 class="text-[#3D405B]">${mech.name}</h3>
                </div>
                <p class="text-gray-600">${mech.description}</p>
            `;
            grid.appendChild(card);
        });
    }

    function initStrategicLevers() {
        const controlContainer = document.getElementById('levers-control');
        const titleEl = document.getElementById('lever-title');
        const descriptionEl = document.getElementById('lever-description');

        appData.strategicLevers.forEach((lever, index) => {
            const button = document.createElement('button');
            button.className = 'lever w-full text-left p-4 rounded-lg font-semibold bg-white shadow-sm';
            button.textContent = lever.title;
            button.dataset.index = index;
            
            button.addEventListener('click', () => {
                document.querySelectorAll('.lever').forEach(b => b.classList.remove('active'));
                button.classList.add('active');
                titleEl.textContent = lever.title;
                descriptionEl.textContent = lever.description;
            });
            controlContainer.appendChild(button);
        });
        
        // Activate the first lever by default
        controlContainer.querySelector('.lever').click();
    }
    
    function initArchitecture() {
        const container = document.getElementById('architecture-layers');
        appData.architecture.forEach(layer => {
            const div = document.createElement('div');
            div.className = `p-4 rounded-lg text-white text-center font-semibold shadow-lg ${layer.color}`;
            div.innerHTML = `
                <h4 class="font-bold">${layer.name}</h4>
                <p class="text-sm font-normal">${layer.description}</p>
            `;
            container.appendChild(div);
        });
    }

    function initRoadmap() {
        const phasesContainer = document.getElementById('phases-container');
        const titleEl = document.getElementById('phase-title');
        const contentEl = document.getElementById('phase-content');
        const detailsContainer = document.getElementById('roadmap-details-container');

        appData.roadmap.forEach(phaseData => {
            const phaseEl = document.createElement('div');
            phaseEl.className = 'phase relative flex flex-col items-center cursor-pointer p-2 rounded-lg transition-colors duration-300';
            phaseEl.dataset.phase = phaseData.phase;
            phaseEl.innerHTML = `
                <div class="phase-circle w-8 h-8 rounded-full bg-gray-200 border-4 border-white flex items-center justify-center font-bold text-gray-600 transition-colors duration-300">${phaseData.phase}</div>
                <span class="mt-2 text-sm font-semibold">${phaseData.duration}</span>
            `;
            
            phaseEl.addEventListener('click', () => {
                document.querySelectorAll('.phase').forEach(p => p.classList.remove('active'));
                phaseEl.classList.add('active');

                detailsContainer.style.opacity = 0;
                setTimeout(() => {
                    titleEl.textContent = phaseData.title;
                    contentEl.innerHTML = phaseData.content;
                    detailsContainer.style.opacity = 1;
                }, 300);
            });

            phasesContainer.appendChild(phaseEl);
        });
        
        // Activate phase 1 by default
        phasesContainer.querySelector('.phase').click();
    }

    // --- CHART CREATION ---

    function createPlatformAnalysisChart() {
        const ctx = document.getElementById('platformAnalysisChart').getContext('2d');
        const data = appData.platformAnalysis;
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: data.labels,
                datasets: data.platforms.map(p => ({
                    label: p.name,
                    data: p.scores,
                    backgroundColor: p.color,
                    borderColor: p.color.replace('0.7', '1'),
                    borderWidth: 1
                }))
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    title: { display: true, text: 'Platform Leverage Point Comparison' },
                    tooltip: { mode: 'index', intersect: false },
                    legend: { position: 'bottom' }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 10,
                        title: { display: true, text: 'Synthesized Score (1-10)' }
                    }
                }
            }
        });
    }

    function createMonetizationChart() {
        const ctx = document.getElementById('monetizationChart').getContext('2d');
        const data = appData.monetization;
        new Chart(ctx, {
            type: 'radar',
            data: {
                labels: data.labels,
                datasets: data.datasets,
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    title: { display: true, text: 'Cuvisoft Monetization Strategy Mix' },
                    legend: { position: 'bottom' }
                },
                scales: {
                    r: {
                        angleLines: { display: true },
                        suggestedMin: 0,
                        suggestedMax: 10,
                        pointLabels: { font: { size: 10 } }
                    }
                }
            }
        });
    }

    // --- SCROLLSPY ---
    function initScrollSpy() {
        const sections = document.querySelectorAll('section');
        const navLinks = document.querySelectorAll('.nav-link');

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    navLinks.forEach(link => {
                        link.classList.toggle('active', link.getAttribute('href').substring(1) === entry.target.id);
                    });
                }
            });
        }, { rootMargin: "-50% 0px -50% 0px" });

        sections.forEach(section => observer.observe(section));
    }


    // --- RUN ALL INITIALIZATIONS ---
    initFlywheel();
    initValueMechanisms();
    initStrategicLevers();
    initArchitecture();
    initRoadmap();
    createPlatformAnalysisChart();
    createMonetizationChart();
    initScrollSpy();

});
</script>

</body>
</html>
